# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET         /                      controllers.Application.index()
GET         /homepage              controllers.Application.homepage()
GET         /error                 controllers.Application.error()
GET         /notebook              controllers.Application.notebook()
GET         /contact               controllers.Application.contact()
GET         /ogame                 controllers.Application.ogame()

GET         /lang                  controllers.Application.getLang()
PUT         /lang                  controllers.Application.switchLang()

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file          controllers.Assets.at(path="/public", file)
GET         /webjars/*file         controllers.WebJarAssets.at(file)

