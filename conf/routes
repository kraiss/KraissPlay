# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET     /                           controllers.Application.index()
GET     /homepage/:lang             controllers.Application.homepage(lang: String)
GET     /error/:lang                controllers.Application.error(lang: String)
GET     /notebook/:lang             controllers.Application.notebook(lang: String)
GET     /contact/:lang              controllers.Application.contact(lang: String)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
GET     /webjars/*file              controllers.WebJarAssets.at(file)

